<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="rtl"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical"
        android:id="@+id/llLoading_dialog"
        android:background="@color/primary_light">

        <com.wang.avi.AVLoadingIndicatorView
            style="@style/AVLoadingIndicatorView.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:indicatorColor="@color/primary_dark"
            app:indicatorName="BallClipRotateMultipleIndicator"
            />

        <TextView
            android:id="@+id/tvLoading_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pvLoading_view"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/padding_large"
            android:gravity="center"
            android:text="لطفا شکیبا باشید"
            android:textColor="@color/primary_dark"/>

    </LinearLayout>

    <TableLayout
        android:id="@+id/tableLayout_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">






        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="right"
            android:weightSum="5"
            android:background="@drawable/shape_underline">

            <TextView
                android:id="@+id/textView_jameKol"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="جمع کل"
                android:gravity="center"
                android:textSize="@dimen/font_small"
                android:textColor="@color/primary_text"/>

            <TextView
                android:id="@+id/textView_price"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:textSize="@dimen/font_large"
                android:textColor="@color/accent"/>

            <!--<TextView-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_weight=".5"-->
                <!--android:text="تومان"-->
                <!--android:gravity="center|bottom"-->
                <!--android:textSize="@dimen/font_xsmall"-->
                <!--android:textColor="@color/primary_text"/>-->



        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="right"
            android:weightSum="7">

            <TextView
                android:id="@+id/textView_text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="شماره میز"
                android:gravity="center"
                android:textSize="@dimen/font_small"
                android:textColor="@color/primary_text"/>

            <EditText
                android:id="@+id/editText_tableNumber"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight=".5"
                android:gravity="center"
                android:textSize="@dimen/font_small"
                android:inputType="number"
                android:textColor="@color/primary_text"/>




        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="right"
            android:weightSum="7">

            <TextView
                android:id="@+id/textView_nameMoshtari"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="نام مشتری"
                android:gravity="center"
                android:textSize="@dimen/font_small"
                android:textColor="@color/primary_text"/>

            <EditText
                android:id="@+id/editText_name"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="5"
                android:gravity="center"
                android:textSize="@dimen/font_small"
                android:inputType="text"
                android:textColor="@color/primary_text"/>




        </TableRow>

        <TableRow
            android:id="@+id/tableRow_vaziat"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="right"
            android:weightSum="7">


            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="وضعیت سفارش"
                android:gravity="center"
                android:textSize="@dimen/font_small"
                android:textColor="@color/primary_text"/>

            <Spinner
                android:id="@+id/spinner_vaziat_sefaresh"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="4.9"
                android:layout_gravity="center_vertical"
                android:background="@drawable/shape_underline"
                android:padding="@dimen/padding_medium"
                android:gravity="center"
                android:inputType="text"
                android:textColor="@color/icons"
                android:textSize="@dimen/font_xsmall" />

            <EditText
                android:visibility="invisible"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="0.1"
                android:gravity="center"
                android:textSize="@dimen/font_small"
                android:inputType="text"
                android:textColor="@color/primary_text"/>

        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:id="@+id/textView_ok"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:text="ارسال سفارش"
                android:textSize="@dimen/font_small"
                android:textColor="@color/icons"
                android:background="#388E3C"
                android:padding="@dimen/padding_medium"/>

            <TextView
                android:id="@+id/textView_cancel"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="انصراف"
                android:textSize="@dimen/font_small"
                android:textColor="@color/icons"
                android:background="#F44336"
                android:padding="@dimen/padding_medium"/>

        </TableRow>


    </TableLayout>

</FrameLayout>