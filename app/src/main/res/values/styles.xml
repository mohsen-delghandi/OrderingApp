<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Custom" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">لطفا شکیبا باشید</item>
        <item name="DialogSpotColor">@color/accent</item>
        <item name="DialogSpotCount">5</item>
    </style>

    <style name="myStyle1">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/padding_bit</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="myStyle2">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="LinearProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/primary</item>
        <item name="android:progressBackgroundTint">@color/primary_light</item>
    </style>

</resources>
