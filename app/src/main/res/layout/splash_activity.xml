<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/splash_back">

        <TableRow
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:weightSum="3">


        <ImageView
            android:layout_gravity="center"
            android:id="@+id/imgLogo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/logo_middle" />

        </TableRow>

        <TableRow
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:gravity="center">


                <ImageView
                    android:id="@+id/imgLogo2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/logo_bottom"
                    android:adjustViewBounds="true"
                    android:layout_height="wrap_content" />


        </TableRow>

        <LinearLayout
            android:layout_marginBottom="@dimen/dimen_xxlarge"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/llLoading_splash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="vertical">

                <com.wang.avi.AVLoadingIndicatorView
                    style="@style/AVLoadingIndicatorView.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:indicatorColor="@color/icons"
                    app:indicatorName="BallClipRotateMultipleIndicator"
                    />

                <TextView
                    android:id="@+id/tvLoading_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pvLoading_view"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/padding_large"
                    android:gravity="center"
                    android:text="لطفا شکیبا باشید"
                    android:textColor="@color/icons"/>
        </LinearLayout>



</RelativeLayout>