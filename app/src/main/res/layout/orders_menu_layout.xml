<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/food_menu_fragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@color/icons"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout_happy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="@dimen/width_nav"
                    android:layout_height="@dimen/width_nav"
                    android:background="@drawable/icon_happy" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_large"
                    android:gravity="center"
                    android:text="لیست علاقه مندی ها خالی است."
                    android:textColor="@color/primary_dark"
                    android:textSize="@dimen/font_medium"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/frameLayout_order"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:visibility="gone"
            android:background="@color/icons">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/accent" />

            <LinearLayout
                android:id="@+id/food_orders_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="@dimen/padding_large">

            </LinearLayout>

            <ImageView
                android:id="@+id/fab_toggle"
                android:layout_width="@dimen/dimen_large"
                android:layout_height="@dimen/dimen_xmedium"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dimen_xxxxlarge"
                android:background="@drawable/border_shape_accent_solid"
                android:padding="@dimen/padding_xmedium"
                android:src="@drawable/icon_down" />

        </FrameLayout>

        <TextView
            android:id="@+id/textView_tayid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/primary"
            android:gravity="center"
            android:padding="@dimen/padding_large"
            android:text="ثبت سفارش"
            android:textColor="@color/icons"
            android:textSize="@dimen/font_medium" />

    </LinearLayout>


</LinearLayout>
