<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="@dimen/padding_large">





    <TableLayout
        android:elevation="@dimen/padding_bit"
        android:padding="@dimen/padding_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_shape_round"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">




        <TableRow

            android:weightSum="5"
        style="@style/myStyle1">

        <!--<LinearLayout-->
            <!--android:layout_margin="@dimen/padding_bit"-->
            <!--android:elevation="@dimen/padding_bit"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_weight="1"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:gravity="center"-->
            <!--android:layout_gravity="center"-->
            <!--android:background="@drawable/border_shape_round">-->




            <android.support.design.widget.TextInputLayout
            android:id="@+id/editText_title2"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:padding="@dimen/padding_bit"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editText_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:hint="سربرگ برنامه"
                android:inputType="text"
                style="@style/myStyle2" />
        </android.support.design.widget.TextInputLayout>



    </TableRow>

        <TableRow

            android:weightSum="5"
            style="@style/myStyle1">

            <!--<LinearLayout-->
                <!--android:layout_margin="@dimen/padding_bit"-->
                <!--android:elevation="@dimen/padding_bit"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_weight="1"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:gravity="center"-->
                <!--android:layout_gravity="center"-->
                <!--android:background="@drawable/border_shape_round">-->


            <!--</LinearLayout>-->



            <android.support.design.widget.TextInputLayout
                android:id="@+id/editText_ip2"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:padding="@dimen/padding_bit"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/editText_ip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:hint="آی پی سرور"
                    android:inputType="number|text"
                    style="@style/myStyle2" />
            </android.support.design.widget.TextInputLayout>





        </TableRow>

        <TableRow
            style="@style/myStyle1">

            <Button
                android:id="@+id/button_update"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="بروزرسانی منوی سفارش"
                android:background="@drawable/button_shape"
                android:backgroundTint="@color/primary_light"/>

        </TableRow>

        <TableRow
            style="@style/myStyle1"
            android:gravity="left"
            android:layout_marginTop="@dimen/dimen_large">

            <Space
                android:layout_weight=".3"/>

            <Button
                android:id="@+id/button_save_settings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="@dimen/padding_bit"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:elevation="@dimen/padding_bit"
                android:text="ذخیره"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/font_large" />

        </TableRow>

    </TableLayout>




</RelativeLayout>