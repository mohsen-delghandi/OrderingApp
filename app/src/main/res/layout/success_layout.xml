<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    android:padding="@dimen/dimen_large">

    <LinearLayout
        android:id="@+id/linearLayout_success"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_large"
            android:scaleType="centerCrop"
            android:src="@drawable/image_order_success" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding_large"
            android:text="موفقیت"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/font_medium" />

        <TextView
            android:layout_marginBottom="@dimen/dimen_large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="سفارش با موفقیت ثبت گردید."
            android:textColor="@color/primary_text"
            android:textSize="@dimen/font_small" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/padding_xbit"
                android:layout_weight="1"
                android:background="@drawable/border_shape_solid_gray"
                android:gravity="center"
                android:text="شماره فیش"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/font_small" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/padding_xbit"
                android:layout_weight="2"
                android:background="@drawable/border_shape_solid_gray"
                android:gravity="center"
                android:text="نام مشتری"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/font_small" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView_fish_number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/padding_xbit"
                android:layout_weight="1"
                android:background="@drawable/border_shape_solid_gray"
                android:gravity="center"
                android:text="9999"
                android:padding="@dimen/padding_large"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/font_large" />

            <TextView
                android:id="@+id/textView_moshtari_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/padding_xbit"
                android:layout_weight="2"
                android:background="@drawable/border_shape_solid_gray"
                android:gravity="center"
                android:text="نوید مندیس"
                android:padding="@dimen/padding_large"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/font_large" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout_success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/textView_okk"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_large"
            android:layout_alignParentRight="true"
            android:background="@drawable/border_shape_primary"
            android:gravity="center"
            android:paddingLeft="@dimen/dimen_large"
            android:paddingRight="@dimen/dimen_large"
            android:text="بسیار خب"
            android:textColor="@color/icons"
            android:textSize="@dimen/font_xmedium"
            app:fontPath="fonts/IRANSansWeb_Medium.ttf"
            tools:ignore="MissingPrefix" />

    </RelativeLayout>

</RelativeLayout>