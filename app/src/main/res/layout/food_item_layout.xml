<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/food_item_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_medium">

        <LinearLayout
            android:id="@+id/linearLayout_cardView"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/food_item_imageView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_item_height"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_alignParentTop="true" />

            <TextView
                android:id="@+id/food_item_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/food_item_imageView"
                android:maxLines="1"
                android:padding="@dimen/padding_bit"
                android:gravity="center"
                app:fontPath="fonts/IRANSansWeb_Light.ttf"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/font_xsmall"
                tools:ignore="MissingPrefix" />
            <TextView
                android:id="@+id/textView_favorite"
                android:layout_width ="match_parent"
                android:layout_height="@dimen/padding_bit"
                android:background="#d50000"
                android:visibility="invisible"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>
