<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/border_shape_accent_solid"
    android:gravity="center"
    android:id="@+id/linearLayout_main"
    android:orientation="vertical"
    android:layout_margin="@dimen/padding_large"
    android:paddingTop="@dimen/padding_bit"
    android:paddingRight="@dimen/padding_bit"
    android:paddingLeft="@dimen/padding_bit"
    >

    <android.support.v7.widget.CardView
        app:cardCornerRadius="@dimen/padding_bit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/nav_imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/most_sold" />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/nav_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/accent"
        android:gravity="center"
        android:padding="@dimen/padding_bit"
        android:text="محبوب ترین ها"
        app:fontPath="fonts/IRANSansWeb_Medium.ttf"
        android:textColor="@color/primary_dark"
        android:textSize="@dimen/font_xsmall"
        tools:ignore="MissingPrefix" />

</LinearLayout>